# Others
[init]
	templatedir = ~/workspace/ShellSpace/tools/git/templatedir/install
[core]
	preloadindex = true
[color]
	ui = auto

# Diff & Merge
[merge]
	tool = kdiff3
[diff]
	renames = true
[mergetool]
	prompt = no

# Hooks
[submodules]
	autoupdate = true

# Rhapsody
[merge "rhp"]
	name = rhapsody diffmerge
	driver = rhp-merge %O %A %B %A
	recursive = binary
[diff "rhp"]
	driver = text
[mergetool "rhp"]
	cmd = rhp-mergetool $BASE $LOCAL $REMOTE $MERGED
[difftool "rhp"]
	cmd = rhp-difftool $LOCAL $REMOTE $MERGED

# SCM check
[scmcheck]
	pcgitsetupcheck = true
	pchookscheck = true
	includepath = true
	inittemplatedir = true
	committemplate = true

[scmclone]
	includepath = true
	inittemplatedir = true
	committemplate = true
